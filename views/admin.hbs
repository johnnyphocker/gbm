<div id="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user" aria-selected="true">Usuarios</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="chart-tab" data-toggle="tab" href="#chart" role="tab" aria-controls="chart" aria-selected="false">IPC</a>
  </li>
</ul>
<div class="tab-content pt-5" id="myTabContent">
  <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="user-tab">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Usuario</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each getUser}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.name}}</td>
            <td>{{this.username}}</td>
            <td><a href="/usuario/{{this._id}}" class="btn btn-primary">Ver perfil</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  
  <div class="tab-pane fade" id="chart" role="tabpanel" aria-labelledby="chart-tab">
    <canvas id="myChart"></canvas>
  </div>

</div>
  
</div>